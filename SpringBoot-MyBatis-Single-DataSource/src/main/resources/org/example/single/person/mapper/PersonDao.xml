<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.single.person.mapper.PersonDao">

    <resultMap type="org.example.single.person.entity.Person" id="PersonMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="firstName" column="first_name" jdbcType="VARCHAR"/>
        <result property="lastName" column="last_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PersonMap">
        select id,
               first_name,
               last_name
        from person
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PersonMap">
        select id,
               first_name,
               last_name
        from person
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PersonMap">
        select
        id, first_name, last_name
        from person
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="firstName != null and firstName != ''">
                and first_name = #{firstName}
            </if>
            <if test="lastName != null and lastName != ''">
                and last_name = #{lastName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into person(first_name, last_name)
        values (#{firstName}, #{lastName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update person
        <set>
            <if test="firstName != null and firstName != ''">
                first_name = #{firstName},
            </if>
            <if test="lastName != null and lastName != ''">
                last_name = #{lastName},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from person
        where id = #{id}
    </delete>

</mapper>